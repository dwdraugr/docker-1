docker run -d --name spawning-pool --restart on-failure:10 -e MYSQL_ROOT_PASSWORD=Kerrigan -e MYSQL_DATABASE=zerglings -v hatchery:/var/lib/mysql mysql --default-authentication-plugin=mysql_native_password
docker run --name spawning-pool --restart always -v hatchery:/var/lib/mysql -e MYSQL_ROOT_PASSWORD=Kerrigan -e MYSQL_DATABASE=zerglings -d mysql
# run		- described above
# -d		- described above
# -e		- set environment variables
# -v		- bind mount a volume

# --default-authentication-plugin - variables for mysql
